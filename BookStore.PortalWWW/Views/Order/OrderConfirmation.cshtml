@model BookStore.Data.Data.Entities.Order

@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="container my-5">
    <h2>Thank you for your order!</h2>
    <p>Your order number is <strong>@Model.IdOrder</strong>.</p>

    <h4>Order Details</h4>
    <ul class="list-group mb-3">
        @foreach (var item in Model.OrderItems)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <strong>@item.Book?.Title</strong><br />
                    Quantity: @item.Quantity
                </div>
                <span>@(item.Quantity * item.UnitPrice).ToString("C")</span>
            </li>
        }
        <li class="list-group-item d-flex justify-content-between">
            <strong>Total Items:</strong>
            <span>@Model.OrderItems.Sum(i => i.Quantity)</span>
        </li>
        <li class="list-group-item d-flex justify-content-between">
            <strong>Total Price:</strong>
            <span>@Model.OrderItems.Sum(i => i.Quantity * i.UnitPrice).ToString("C")</span>
        </li>
    </ul>
</div>
