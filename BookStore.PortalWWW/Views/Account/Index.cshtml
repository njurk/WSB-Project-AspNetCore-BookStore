@model BookStore.PortalWWW.Models.UserProfileViewModel

@{
    ViewData["Title"] = "Your Account";
}

<div class="container my-5">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <div class="row g-4">
        <div class="col-12 col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-primary text-white fw-semibold">
                    Orders
                </div>
                <div class="card-body" style="max-height: 350px; overflow-y: auto;">
                    @if (Model.Orders.Any())
                    {
                        foreach (var order in Model.Orders)
                        {
                            <div class="mb-3 border-bottom pb-2">
                                <strong>Order #@order.OrderId</strong><br />
                                <small class="text-muted">Placed on @order.DatePlaced.ToString("MMM dd, yyyy")</small><br />
                                <span>Status: <span class="badge @(order.Status == "Delivered" ? "bg-success" : "bg-warning")">@order.Status</span></span>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">You have no orders yet.</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-12 col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-primary text-white fw-semibold">
                    Reviews
                </div>
                <div class="card-body" style="max-height: 350px; overflow-y: auto;">
                    @if (Model.Reviews.Any())
                    {
                        foreach (var review in Model.Reviews)
                        {
                            <div class="mb-3 border-bottom pb-2">
                                <strong>@review.BookTitle</strong><br />
                                <small class="text-muted">Rating: @review.Rating/5</small><br />
                                <p>@review.Comment</p>
                                <small class="text-muted">@review.DateAdded.ToString("MMM dd, yyyy")</small>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">You have not written any reviews yet.</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-12 col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-primary text-white fw-semibold">
                    Edit Credentials
                </div>
                <div class="card-body">
                    <div class="row mb-2">
                        <label class="col-sm-5 col-form-label fw-semibold">@Html.DisplayNameFor(m => m.Username):</label>
                        <div class="col-sm-7">@Model.Username</div>
                    </div>
                    <div class="row mb-2">
                        <label class="col-sm-5 col-form-label fw-semibold">@Html.DisplayNameFor(m => m.FirstName):</label>
                        <div class="col-sm-7">@Model.FirstName</div>
                    </div>
                    <div class="row mb-2">
                        <label class="col-sm-5 col-form-label fw-semibold">@Html.DisplayNameFor(m => m.LastName):</label>
                        <div class="col-sm-7">@Model.LastName</div>
                    </div>
                    <div class="row mb-2">
                        <label class="col-sm-5 col-form-label fw-semibold">@Html.DisplayNameFor(m => m.Email):</label>
                        <div class="col-sm-7">@Model.Email</div>
                    </div>
                    <div class="row mb-2">
                        <label class="col-sm-5 col-form-label fw-semibold">@Html.DisplayNameFor(m => m.Street):</label>
                        <div class="col-sm-7">@Model.Street</div>
                    </div>
                    <div class="row mb-2">
                        <label class="col-sm-5 col-form-label fw-semibold">@Html.DisplayNameFor(m => m.City):</label>
                        <div class="col-sm-7">@Model.City</div>
                    </div>
                    <div class="row mb-2">
                        <label class="col-sm-5 col-form-label fw-semibold">@Html.DisplayNameFor(m => m.PostalCode):</label>
                        <div class="col-sm-7">@Model.PostalCode</div>
                    </div>

                    <div class="d-flex gap-3 mt-3">
                        <a asp-action="Edit" asp-route-id="@Model.IdUser" class="btn btn-primary flex-grow-1">
                            <i class="bi bi-pencil-square me-2"></i> Edit Profile
                        </a>

                        <form asp-action="Logout" method="post" class="m-0 flex-grow-1">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger w-100">
                                <i class="bi bi-box-arrow-right me-2"></i> Logout
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
