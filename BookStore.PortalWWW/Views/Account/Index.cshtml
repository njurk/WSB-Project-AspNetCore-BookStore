@model BookStore.Data.Data.Entities.User

@{
    ViewData["Title"] = "Your account";
}

<div class="container my-5">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="row mb-3">
                <label class="col-sm-3 col-form-label fw-semibold">Username:</label>
                <div class="col-sm-9">@Model.Username</div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-3 col-form-label fw-semibold">First Name:</label>
                <div class="col-sm-9">@Model.FirstName</div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-3 col-form-label fw-semibold">Last Name:</label>
                <div class="col-sm-9">@Model.LastName</div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-3 col-form-label fw-semibold">Email:</label>
                <div class="col-sm-9">@Model.Email</div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-3 col-form-label fw-semibold">Street:</label>
                <div class="col-sm-9">@Model.Street</div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-3 col-form-label fw-semibold">City:</label>
                <div class="col-sm-9">@Model.City</div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-3 col-form-label fw-semibold">Postal Code:</label>
                <div class="col-sm-9">@Model.PostalCode</div>
            </div>

            <div class="d-flex gap-3 mt-4">
                <a asp-action="Edit" asp-route-id="@Model.IdUser" class="btn btn-primary flex-grow-1">
                    <i class="bi bi-pencil-square me-2"></i> Edit Profile
                </a>

                <form asp-action="Logout" method="post" class="m-0">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger flex-grow-1">
                        <i class="bi bi-box-arrow-right me-2"></i> Logout
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
