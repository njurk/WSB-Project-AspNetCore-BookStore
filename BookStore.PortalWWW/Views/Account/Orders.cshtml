@model List<BookStore.PortalWWW.Models.OrderViewModel>

@{
    ViewData["Title"] = "Your orders";
}

<div class="container my-5">
    <a asp-action="Index" class="btn btn-light border-2 border-dark mb-4">
        <i class="bi bi-arrow-left me-2"></i> Back
    </a>
    <h2 class="mb-4 color-secondary fw-semibold">@ViewData["Title"]</h2>

    @if (!Model.Any())
    {
        <p class="text-muted">You have no orders yet</p>
    }
    else
    {
        <div class="list-group me-5">
            @foreach (var order in Model)
            {
                <a asp-controller="Account" asp-action="OrderDetails" asp-route-id="@order.OrderId"
                   class="list-group-item list-group-item-action text-decoration-none text-dark">
                    <div class="d-flex justify-content-between align-items-center mb-1">
                        <div><strong>Order #@order.OrderId</strong></div>
                        <span class="badge bg-warning">@order.Status</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <small>@order.DatePlaced.ToString("MMM dd, yyyy")</small>
                        
                        <small class="fw-bold" style="font-size: medium;">$@order.TotalPrice.ToString("0.00")</small>
                    </div>
                </a>
            }
        </div>
    }
</div>
