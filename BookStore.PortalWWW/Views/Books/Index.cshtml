@using BookStore.Data.Data.Entities
@model IEnumerable<BookStore.Data.Data.Entities.Book>

@{
    ViewData["Title"] = "Books";
}

<div class="main-content mt-4">
    <div class="d-flex justify-content-start align-items-center mb-4">
        @Html.Partial("_SearchBarPartial")
        <button class="btn btn-outline-dark d-flex align-items-center" style="height: 30px; padding: 0 8px;">
            <i class="fas fa-filter"></i>
            <span class="ms-2">Filter</span>
        </button>
    </div>

    <div class="d-flex flex-wrap gap-4 mb-5 justify-content-left">
        @foreach (var book in Model)
        {
            <div class="book-card">
                <a href="@Url.Action("Details", "Books", new { id = book.IdBook })" class="text-decoration-none text-dark">
                    <div class="card h-100 shadow-sm border-0">
                        <img src="~/images/@book.ImageUrl" class="card-img-top book-cover" alt="@book.Title" />
                        <div class="card-body p-3">
                            <h6 class="card-title fw-semibold mb-1">@book.Title</h6>
                            <p class="text-muted mb-1" style="font-size: 0.9rem;">by @book.Author</p>
                            <p class="text-background fw-bold mb-0">$ @book.Price</p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>