@using BookStore.Data.Data.Entities

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>BookStore - @ViewData["Title"]</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
        <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/BookStore.PortalWWW.styles.css" asp-append-version="true" />
    </head>

    <body class="m-0">
        <div class="col-12 p-0">
            <nav class="navbar navbar-expand bg-secondary text-white sticky-top" style="height: 35px;">
                <div class="container d-flex justify-content-center align-items-center" style="font-size: 0.85rem;">
                    <span class="navbar-text text-white">
                        🚚 Free shipping on orders over $50 &nbsp; | &nbsp;
                        🎉 Use code <strong>BOOK10</strong> for 10% off &nbsp; | &nbsp;
                        ⭐ 10,000+ 5-star reviews &nbsp; | &nbsp;
                        🔄 Free returns within 30 days
                    </span>
                </div>
            </nav>

            <nav class="navbar navbar-expand-md navbar-light bg-white sticky-top shadow-sm p-0" style="top: 35px;">
                <div class="container">
                    <a asp-controller="Home" asp-action="Index" class="navbar-brand ps-2">
                        <img src="~/logo-alpha.png" alt="BookStore" style="height: 50px;">
                    </a>

                    <div class="d-md-none  d-flex align-items-center">
                        <a asp-controller="Cart" asp-action="Index" class="me-3">
                            <i class="bi bi-bag fs-4 color-tertiary"></i>
                        </a>
                        <button class="navbar-toggler bg-light color-tertiary me-2" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                    </div>

                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav me-auto ms-4">
                            <li class="nav-item">
                                <a class="nav-link color-tertiary" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link color-tertiary" asp-controller="Books" asp-action="Index">Books</a>
                            </li>
                        </ul>

                        @Html.Partial("_SearchBarPartial")

                        <div class="d-none d-md-flex align-items-center ms-auto">
                            <a asp-controller="Cart" asp-action="Index" class="me-4 nav-icon">
                                <i class="bi bi-bag fs-4 color-tertiary outline-icon"></i>
                                <i class="bi bi-bag-fill fs-4 color-tertiary solid-icon position-absolute top-0 start-0 d-none"></i>
                            </a>
                            <a asp-controller="Collection" asp-action="Index" class="me-4 nav-icon">
                                <i class="bi bi-suit-heart fs-4 color-tertiary outline-icon"></i>
                                <i class="bi bi-suit-heart-fill fs-4 color-tertiary solid-icon position-absolute top-0 start-0 d-none"></i>
                            </a>
                            <a asp-controller="Account" asp-action="Index" class="me-4 nav-icon">
                                <i class="bi bi-person fs-3 color-tertiary outline-icon"></i>
                                <i class="bi bi-person-fill fs-3 color-tertiary solid-icon position-absolute top-0 start-0 d-none"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </nav>

            <div class="main-content">
                <div class="container">
                    <div class="row">
                        <div class="col-md-3 py-2">
                            <div class="px-3 py-4">
                                <h2>Genres</h2>
                                <br />
                                @await Component.InvokeAsync("GenresList")
                            </div>
                        </div>

                        <div class="col-md-9 mt-4">
                            <main role="main" class="pb-3">
                                @RenderBody()
                            </main>
                        </div>
                    </div>
                </div>
            </div>

            <div class="container-fluid bg-dark ps-0 mt-5">
                <footer class="p-4 bg-dark mt-4">
                    <ul class="nav justify-content-center border-bottom pb-3 mb-3">
                        <li class="nav-item">
                            <a class="nav-link px-2 text-white" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-2 text-white" asp-controller="Home" asp-action="Books">Books</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-2 text-white" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-2 text-white" asp-controller="Home" asp-action="FAQs">FAQ</a>
                        </li>
                    </ul>

                    <p class="text-center text-white">&copy; 2025 BookStore. All rights reserved.</p>

                    <div class="d-flex justify-content-center gap-4">
                        <a href="#" aria-label="Instagram" class="text-white">
                            <i class="fab fa-instagram" style="font-size: 24px;"></i>
                        </a>
                        <a href="#" aria-label="Facebook" class="text-white">
                            <i class="fab fa-facebook" style="font-size: 24px;"></i>
                        </a>
                        <a href="#" aria-label="YouTube" class="text-white">
                            <i class="fab fa-youtube" style="font-size: 24px;"></i>
                        </a>
                    </div>
                </footer>
            </div>
        </div>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
