@{
    ViewData["Title"] = "Cart";
}

<div class="main-content my-5">
    <div class="container">
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <strong>Special Offer!</strong> Get 10% off your first order! Use code: <strong>FIRST10</strong> at checkout.
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>

        <h2 class="text-center mb-4">Cart</h2>
        <div class="row">
            <div class="col-md-8">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr class="table-dark">
                            <th>Product</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><img src="~/images/book1.png" alt="The Little Prince" class="img-fluid" width="50"> The Little Prince</td>
                            <td>$12.99</td>
                            <td>
                                <div class="d-flex align-items-center mb-3">
                                    <button class="btn btn-outline-secondary me-2">-</button>
                                    <input type="number" value="1" class="form-control w-25 text-center" min="1">
                                    <button class="btn btn-outline-secondary ms-2">+</button>
                                </div>
                            </td>
                            <td>$12.99</td>
                        </tr>
                        <tr>
                            <td><img src="~/images/book2.png" alt="Alice in Wonderland" class="img-fluid" width="50"> Alice in Wonderland</td>
                            <td>$23.99</td>
                            <td>
                                <div class="d-flex align-items-center mb-3">
                                    <button class="btn btn-outline-secondary me-2">-</button>
                                    <input type="number" value="1" class="form-control w-25 text-center" min="1">
                                    <button class="btn btn-outline-secondary ms-2">+</button>
                                </div>
                            </td>
                            <td>$23.99</td>
                        </tr>
                        <tr>
                            <td><img src="~/images/book3.png" alt="The Hobbit" class="img-fluid" width="50"> The Hobbit</td>
                            <td>$19.99</td>
                            <td>
                                <div class="d-flex align-items-center mb-3">
                                    <button class="btn btn-outline-secondary me-2">-</button>
                                    <input type="number" value="1" class="form-control w-25 text-center" min="1">
                                    <button class="btn btn-outline-secondary ms-2">+</button>
                                </div>
                            </td>
                            <td>$19.99</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-md-4 mb-5">
                <div class="card p-3">
                    <h4 class="card-title">Cart Summary</h4>
                    <ul class="list-unstyled">
                        <li>Total Items: 3</li>
                        <li>Total Price: $56.97</li>
                    </ul>
                    <button class="btn btn-success w-100">Proceed to Checkout</button>
                </div>
                <div class="mt-4">
                    <h5>Payment Options</h5>
                    <i class="fa-brands fa-cc-visa fa-3x me-3"></i>
                    <i class="fab fa-cc-mastercard fa-3x me-3"></i>
                    <i class="fab fa-paypal fa-3x me-3"></i>
                </div>
                <div class="mt-4">
                    <h5>Promotions</h5>
                    <p>Get 10% off your first order! Use code: FIRST10 at checkout.</p>
                    <p>Free returns within 30 days of purchase.</p>
                </div>
            </div>
        </div>
    </div>
</div>

