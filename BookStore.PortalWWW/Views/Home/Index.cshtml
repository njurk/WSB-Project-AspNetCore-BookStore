@{
    ViewData["Title"] = "Home";
}

<div class="container py-2">
    <div class="alert bg-success text-white text-center mb-5 py-4 rounded-4 shadow-lg position-relative">
        <div class="position-absolute top-0 start-50 translate-middle bg-white text-success px-3 py-1 rounded-bottom fw-bold shadow-sm">
            🎉 Special Offer 🎉
        </div>
        <div class="fw-bold fs-2 mb-2">BIG DISCOUNT ALERT!</div>
        <div class="fs-5 mb-3">
            Get <span class="fw-bold text-warning">10% OFF</span> your first order!
        </div>
        <div class="mb-3">
            Use code: <span class="fw-bold text-success bg-white px-2 py-1 rounded shadow-sm">WELCOME10</span>
        </div>
        <div class="fst-italic">
            ⏳ Limited time offer – act fast!
        </div>
    </div>

    <h2 class="mb-4">Featured</h2>
    <div id="carouselExample" class="carousel slide w-50 mb-5" data-bs-ride="carousel" style="justify-self: center;">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/book4.png" class="d-block fixed-image mx-auto" alt="Book 1">
            </div>
            <div class="carousel-item">
                <img src="~/images/book5.png" class="d-block fixed-image mx-auto" alt="Book 2">
            </div>
            <div class="carousel-item">
                <img src="~/images/book6.png" class="d-block fixed-image mx-auto" alt="Book 3">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <div class="mt-5">
        <h2 class="mb-4">Popular now</h2>
        <div class="row row-cols-1 row-cols-md-3 g-4">

            <div class="col">
                <div class="card">
                    <img src="~/images/book1.png" class="card-img-top fixed-image mx-auto" alt="Book 1">
                    <div class="card-body">
                        <h5 class="card-title">The Little Prince</h5>
                        <p class="card-text">Antoine de Saint-Exupéry</p>
                        <a href="#" class="btn btn-success">View Details</a>
                    </div>
                </div>
            </div>

            <div class="col">
                <div class="card">
                    <img src="~/images/book2.png" class="card-img-top fixed-image mx-auto" alt="Book 2">
                    <div class="card-body">
                        <h5 class="card-title">Alice in Wonderland</h5>
                        <p class="card-text">Lewis Carroll</p>
                        <a href="#" class="btn btn-success">View Details</a>
                    </div>
                </div>
            </div>

            <div class="col">
                <div class="card">
                    <img src="~/images/book3.png" class="card-img-top fixed-image mx-auto" alt="Book 3">
                    <div class="card-body">
                        <h5 class="card-title">The Hobbit</h5>
                        <p class="card-text">J. R. R. Tolkien</p>
                        <a href="#" class="btn btn-success">View Details</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- carousel -->
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
}