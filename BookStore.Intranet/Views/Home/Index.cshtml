@{
    ViewData["Title"] = "Dashboard";
}

<div class="container py-4">
    <h1 class="mb-4 text-center fw-bold">📊 Monthly Dashboard</h1>

    <div class="row g-4">
        <div class="col-md-3">
            <div class="card text-white" style="background-color: #8ba98b; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
                <div class="card-body text-center">
                    <h6 class="card-title text-uppercase">Revenue</h6>
                    <p class="card-text fs-3 fw-bold">@Model.TotalRevenue.ToString("C")</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white" style="background-color: #7a9eae; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
                <div class="card-body text-center">
                    <h6 class="card-title text-uppercase">Inventory</h6>
                    <p class="card-text fs-3 fw-bold">@Model.TotalBooks</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white" style="background-color: #d1c689; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
                <div class="card-body text-center">
                    <h6 class="card-title text-uppercase">Orders</h6>
                    <p class="card-text fs-3 fw-bold">@Model.TotalOrders</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white" style="background-color: #a68f7b; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
                <div class="card-body text-center">
                    <h6 class="card-title text-uppercase">Deliveries</h6>
                    <p class="card-text fs-3 fw-bold">@Model.TotalDeliveries</p>
                </div>
            </div>
        </div>

    </div>

    <div class="row g-4 mt-4">
        <div class="col-md-6">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title mb-3">📈 Revenue Chart</h5>
                    <div class="flex-grow-1">
                        <canvas id="ordersChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title mb-3">📦 Recent Orders</h5>
                    <div class="table-responsive flex-grow-1">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Order #</th>
                                    <th>Date</th>
                                    <th>Status</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.RecentOrders)
                                {
                                    <tr>
                                        <td>@order.OrderID</td>
                                        <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                                        <td>@order.OrderStatusName</td>
                                        <td>@order.TotalPrice.ToString("C")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('ordersChart').getContext('2d');
        const ordersChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.ChartLabels)),
                datasets: [{
                    label: 'Revenue',
                    data: @Html.Raw(Json.Serialize(Model.ChartData)),
                    backgroundColor: 'rgba(54, 162, 235, 0.2)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 2,
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: { beginAtZero: true }
                }
            }
        });
    </script>
}
