@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">
    <br />
    <h1 class="mb-4">Current Month</h1>
    <br />

    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="card text-white bg-primary h-100">
                <div class="card-body">
                    <h5 class="card-title">Revenue</h5>
                    <p class="card-text display-6">@Model.TotalRevenue</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card text-white bg-success h-100">
                <div class="card-body">
                    <h5 class="card-title">Inventory Count</h5>
                    <p class="card-text display-6">@Model.TotalBooks</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card text-white bg-warning h-100">
                <div class="card-body">
                    <h5 class="card-title">Orders</h5>
                    <p class="card-text display-6">@Model.TotalOrders</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card text-white bg-danger h-100">
                <div class="card-body">
                    <h5 class="card-title">Deliveries</h5>
                    <p class="card-text display-6">@Model.TotalDeliveries</p>
                </div>
            </div>
        </div>
    </div>

    <br />

    <div class="row mt-4">
        <div class="col-md-6 mb-4">
            <div class="card" style="height: 50vh;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Revenue</h5>
                    <div style="flex: 1;">
                        <canvas id="ordersChart" style="width: 100%; height: 100%;"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card" style="height: 50vh;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Latest Orders</h5>
                    <div style="flex-grow: 1;">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Order #</th>
                                    <th>Date</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.RecentOrders)
                                {
                                    <tr>
                                        <td>@order.OrderID</td>
                                        <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                                        <td>@order.TotalPrice.ToString("C")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var ctx = document.getElementById('ordersChart').getContext('2d');
        var ordersChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.ChartLabels)),
                datasets: [{
                    label: 'Revenue',
                    data: @Html.Raw(Json.Serialize(Model.ChartData)),
                    backgroundColor: 'rgba(54, 162, 235, 0.2)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 2,
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
}
