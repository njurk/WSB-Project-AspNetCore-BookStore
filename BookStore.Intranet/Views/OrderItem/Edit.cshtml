@model BookStore.Data.Data.Entities.OrderItem

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center mb-4">Edit Order Item</h1>

<div class="d-flex justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="border p-4 rounded">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="IdOrderItem" />

                <div class="form-group mb-3">
                    <label asp-for="IdOrder" class="control-label">Order</label>
                    <select asp-for="IdOrder" class="form-control" asp-items="ViewBag.IdOrder"></select>
                    <span asp-validation-for="IdOrder" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="IdBook" class="control-label">Book</label>
                    <select asp-for="IdBook" class="form-control" asp-items="ViewBag.IdBook"></select>
                    <span asp-validation-for="IdBook" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Quantity" class="control-label">Quantity</label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="UnitPrice" class="control-label">Unit Price</label>
                    <input asp-for="UnitPrice" class="form-control" />
                    <span asp-validation-for="UnitPrice" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Save" class="btn btn-primary w-100 mb-2" />
                    <a asp-action="Index" class="btn btn-secondary w-100">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
