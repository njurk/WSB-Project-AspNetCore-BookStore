@model IEnumerable<BookStore.Data.Data.Entities.Book>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Books</h1>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <a asp-action="Create" class="btn btn-success">
            <i class="fa fa-plus"></i> Create New
        </a>
    </div>

    <table class="table table-striped table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Title)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th>@Html.DisplayNameFor(model => model.Price)</th>
                <th>Pages</th>
                <th>Year</th>
                <th>@Html.DisplayNameFor(model => model.Language)</th>
                <th>@Html.DisplayNameFor(model => model.Quantity)</th>
                <th>@Html.DisplayNameFor(model => model.ISBN)</th>
                <th>@Html.DisplayNameFor(model => model.Author)</th>
                <th>@Html.DisplayNameFor(model => model.ImageUrl)</th>
                <th class="text-center" style="width: 120px">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                    <td>@Html.DisplayFor(modelItem => item.NumberOfPages)</td>
                    <td>@Html.DisplayFor(modelItem => item.YearPublished)</td>
                    <td>@Html.DisplayFor(modelItem => item.Language)</td>
                    <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                    <td>@Html.DisplayFor(modelItem => item.ISBN)</td>
                    <td>@item.Author.FirstName @item.Author.LastName</td>
                    <td>@Html.DisplayFor(modelItem => item.ImageUrl)</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.IdBook" class="btn btn-sm btn-outline-primary">
                            <i class="fa fa-pencil-square"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.IdBook" class="btn btn-sm btn-outline-info">
                            <i class="fa fa-info-circle"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.IdBook" class="btn btn-sm btn-outline-danger">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
