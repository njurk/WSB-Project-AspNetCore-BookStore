<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BookStore - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <nav class="sidebar" id="sidebar">
        <div class="sidebar-header border-bottom">
            <a>
                <img src="~/logo-alpha.png" alt="BookStore" style="height: 40px;">
            </a>
        </div>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-tachometer-alt me-2"></i> Dashboard
                </a>
            </li>
            <hr />
            <li class="nav-item text-uppercase fw-bold fs-6 text-muted">CMS</li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="StaticText" asp-action="Index">
                    <i class="fa-solid fa-file-text"></i> Static texts
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Page" asp-action="Index">
                    <i class="fa-solid fa-newspaper"></i> Pages
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Post" asp-action="Index">
                    <i class="fa-solid fa-square-plus"></i> Posts
                </a>
            <hr/>
            <li class="nav-item text-uppercase fw-bold fs-6 text-muted">Catalog</li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Book" asp-action="Index">
                    <i class="fas fa-book me-2"></i> Books
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Author" asp-action="Index">
                    <i class="fas fa-pen-nib me-2"></i> Authors
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Genre" asp-action="Index">
                    <i class="fas fa-tags me-2"></i> Genres
                </a>
            </li>

            <hr />

            <li class="nav-item text-uppercase fw-bold fs-6 text-muted">Orders</li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Order" asp-action="Index">
                    <i class="fas fa-shopping-cart me-2"></i> Orders
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="OrderStatus" asp-action="Index">
                    <i class="fas fa-clipboard-check me-2"></i> Order statuses
                </a>
            </li>
            <hr />
            <li class="nav-item text-uppercase fw-bold fs-6 text-muted">User management</li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Review" asp-action="Index">
                    <i class="fas fa-star me-2"></i> Reviews
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="User" asp-action="Index">
                    <i class="fas fa-user me-2"></i> Users
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Cart" asp-action="Index">
                    <i class="fas fa-cart-shopping me-2"></i> User cart items
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Collection" asp-action="Index">
                    <i class="fas fa-bookmark me-2"></i> User collections
                </a>
            </li>
        </ul>
    </nav>

    <nav class="navbar navbar-expand-md px-3">
        <div class="ms-auto d-flex align-items-center">
            @if (User.Identity.IsAuthenticated)
            {
                <span class="text-dark me-3">Hello, @User.Identity.Name!</span>
            }
            <form asp-action="Logout" asp-controller="Account" method="post" style="display:inline;">
                <button type="submit" class="nav-link text-dark d-flex align-items-center me-3" style="background: none; border: none; padding: 0;">
                    <i class="fa fa-sign-out-alt me-2"></i> Logout
                </button>
            </form>
            <button class="navbar-toggler bg-light" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
                    aria-label="Toggle sidebar">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </nav>

    <div class="main-content">
        <div class="container-fluid px-0">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function() {
            $('.navbar-toggler').click(function() {
                $('#sidebar').toggleClass('active');
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>