<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BookStore - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="m-0">
    <div class="container-fluid p-0">
        <div class="row m-0">
            <nav class="col-md-3 col-lg-2 p-0 bg-dark sidebar collapse d-md-block" id="sidebar">
                <div class="sidebar-header">
                    <a>
                        <img src="~/logo-alpha.png" alt="BookStore" style="height: 50px;">
                    </a>
                </div>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Book" asp-action="Index">Inventory</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Order" asp-action="Index">Orders</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="OrderItem" asp-action="Index">Order items</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Customer" asp-action="Index">Customers</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Supplier" asp-action="Index">Suppliers</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Delivery" asp-action="Index">Deliveries</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="DeliveryItem" asp-action="Index">Delivery items</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Genre" asp-action="Index">Genres</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Author" asp-action="Index">Authors</a>
                    </li>
                </ul>
            </nav>

            <div class="col-md-9 col-lg-10 p-0">
                <nav class="navbar navbar-expand-md navbar-light bg-dark p-0" style="--bs-bg-opacity: .9; height: 50px; justify-content: end;">
                    <div class="d-flex align-items-center">
                        <span class="text-white me-4">Hello, Admin!</span>
                        <a class="navbar-brand p-2" href="#">
                            <img src="~/profile.png" alt="Profile" class="rounded-circle" style="height: 30px;">
                        </a>

                        <button class="navbar-toggler bg-light" type="button" data-bs-toggle="collapse" data-bs-target="#sidebar" aria-controls="sidebar" aria-expanded="false" aria-label="Toggle sidebar">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                    </div>
                </nav>


                <div class="container p-0">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/sweetalert/sweetalert.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
