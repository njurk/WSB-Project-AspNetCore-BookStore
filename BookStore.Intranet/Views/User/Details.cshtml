@model BookStore.Data.Data.Entities.User

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 bg-secondary bg-opacity-10 p-4 rounded">
            <h1 class="mb-4">User details</h1>

            <div class="row">
                <dl class="col-md-6">
                    <dt class="text-muted fw-semibold">@Html.DisplayNameFor(m => m.Username)</dt>
                    <dd>@Html.DisplayFor(m => m.Username)</dd>

                    <dt class="text-muted fw-semibold">@Html.DisplayNameFor(m => m.FirstName)</dt>
                    <dd>@Html.DisplayFor(m => m.FirstName)</dd>

                    <dt class="text-muted fw-semibold">@Html.DisplayNameFor(m => m.LastName)</dt>
                    <dd>@Html.DisplayFor(m => m.LastName)</dd>

                    <dt class="text-muted fw-semibold">@Html.DisplayNameFor(m => m.Email)</dt>
                    <dd>@Html.DisplayFor(m => m.Email)</dd>
                </dl>

                <dl class="col-md-6">
                    <dt class="text-muted fw-semibold">@Html.DisplayNameFor(m => m.Street)</dt>
                    <dd>@Html.DisplayFor(m => m.Street)</dd>

                    <dt class="text-muted fw-semibold">@Html.DisplayNameFor(m => m.City)</dt>
                    <dd>@Html.DisplayFor(m => m.City)</dd>

                    <dt class="text-muted fw-semibold">@Html.DisplayNameFor(m => m.PostalCode)</dt>
                    <dd>@Html.DisplayFor(m => m.PostalCode)</dd>
                </dl>
            </div>

            <div class="mt-2">
                <button class="btn btn-outline-secondary w-100 text-start" type="button" data-bs-toggle="collapse" data-bs-target="#userCart" aria-expanded="false" aria-controls="userCart" style="font-weight: 500;">
                    <ion-icon name="cart-outline" style="font-size: 1.3rem; vertical-align: middle;"></ion-icon>
                    Cart
                </button>

                <div class="collapse mt-3" id="userCart">
                    <div class="card card-body bg-light">
                        @if (Model.Carts != null && Model.Carts.Any())
                        {
                            <ul class="list-group list-group-flush">
                                @foreach (var item in Model.Carts)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <span>@item.Book.Title</span>
                                        <span class="badge bg-secondary rounded-pill">@item.Quantity</span>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted mb-0">This user's cart is empty</p>
                        }
                    </div>
                </div>
            </div>

            <div class="mt-2">
                <button class="btn btn-outline-secondary w-100 text-start" type="button" data-bs-toggle="collapse" data-bs-target="#userCollections" aria-expanded="false" aria-controls="userCollections" style="font-weight: 500;">
                    <ion-icon name="bookmark-outline" style="font-size: 1.3rem; vertical-align: middle;"></ion-icon>
                    Collection
                </button>

                <div class="collapse mt-3" id="userCollections">
                    <div class="card card-body bg-light">
                        @if (@Model.Collections != null && @Model.Collections.Any())
                        {
                            <ul class="list-group list-group-flush">
                                @foreach (var collectionItem in @Model.Collections)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <span>@collectionItem.Book.Title</span>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted mb-0">This user's collection is empty</p>
                        }
                    </div>
                </div>
            </div>

            <div class="d-flex gap-2 mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.IdUser" class="btn btn-secondary d-flex align-items-center gap-2 px-3 py-2" style="font-weight: 500;">
                    <ion-icon name="create-outline" style="font-size: 1.4rem;"></ion-icon> Edit
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary d-flex align-items-center gap-2 px-3 py-2" style="font-weight: 500;">
                    <ion-icon name="arrow-back-outline" style="font-size: 1.4rem;"></ion-icon> Back
                </a>
            </div>
        </div>
    </div>
</div>
