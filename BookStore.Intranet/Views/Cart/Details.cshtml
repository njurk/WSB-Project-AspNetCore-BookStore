@model BookStore.Data.Data.Entities.Cart

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 bg-secondary bg-opacity-10 p-4 rounded">
            <h1 class="mb-4">Cart item details</h1>

            <dl class="row">
                <dt class="col-sm-3 text-muted fw-semibold">
                    @Html.DisplayNameFor(m => m.User)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(m => m.User.Username)
                </dd>

                <dt class="col-sm-3 text-muted fw-semibold">
                    @Html.DisplayNameFor(m => m.Book)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(m => m.Book.Title)
                </dd>

                <dt class="col-sm-3 text-muted fw-semibold">
                    @Html.DisplayNameFor(m => m.Quantity)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(m => m.Quantity)
                </dd>
            </dl>

            <div class="mt-4 d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model?.IdCart" class="btn btn-secondary d-flex align-items-center gap-2 px-3 py-2" style="font-weight: 500;">
                    <ion-icon name="create-outline" style="font-size: 1.4rem;"></ion-icon> Edit
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary d-flex align-items-center gap-2 px-3 py-2" style="font-weight: 500;">
                    <ion-icon name="arrow-back-outline" style="font-size: 1.4rem;"></ion-icon> Back
                </a>
            </div>
        </div>
    </div>
</div>
