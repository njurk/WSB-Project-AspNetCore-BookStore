@model BookStore.Data.Data.Entities.Review

@{
    ViewData["Title"] = "Add";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7 bg-secondary bg-opacity-10 p-4 rounded">
            <h1 class="mb-4">New review</h1>

            <form asp-action="Create" id="createForm">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="IdUser" class="form-label"></label>
                            <select asp-for="IdUser" class="form-select" asp-items="ViewBag.IdUser"></select>
                            <span asp-validation-for="IdUser" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="IdBook" class="form-label"></label>
                            <select asp-for="IdBook" class="form-select" asp-items="ViewBag.IdBook"></select>
                            <span asp-validation-for="IdBook" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Rating" class="form-label"></label>
                            <input asp-for="Rating" class="form-control" />
                            <span asp-validation-for="Rating" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="DateAdded" class="form-label"></label>
                            <input asp-for="DateAdded" class="form-control" type="datetime-local" />
                            <span asp-validation-for="DateAdded" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group mb-3 h-100 d-flex flex-column">
                            <label asp-for="Comment" class="form-label"></label>
                            <textarea asp-for="Comment" class="form-control flex-grow-1" rows="8"></textarea>
                            <span asp-validation-for="Comment" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </form>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <ion-icon name="arrow-back-outline" class="me-1"></ion-icon> Back
                </a>
                <button type="submit" class="btn btn-secondary" form="createForm">Add</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
