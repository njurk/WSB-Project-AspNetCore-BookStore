@model BookStore.Data.Data.Entities.Review

@{
    ViewData["Title"] = "Add";
}

<h1 class="mb-4 text-center">Add Review</h1>

<div class="d-flex justify-content-center">
    <div class="col-md-6 col-lg-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="IdUser" class="form-label"></label>
                <select asp-for="IdUser" class="form-control" asp-items="ViewBag.IdUser"></select>
            </div>

            <div class="mb-3">
                <label asp-for="IdBook" class="form-label"></label>
                <select asp-for="IdBook" class="form-control" asp-items="ViewBag.IdBook"></select>
            </div>

            <div class="mb-3">
                <label asp-for="Rating" class="form-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Comment" class="form-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Add</button>
        </form>

        <div class="mt-3 text-center">
            <a asp-action="Index" class="text-decoration-none">← Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
