@model BookStore.Data.Data.Entities.Review

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8 bg-secondary bg-opacity-10 p-4 rounded">
            <h1 class="mb-4">Review details</h1>

            <div class="row">
                <dl class="col-md-4">
                    <dt class="text-muted fw-semibold">@Html.DisplayNameFor(m => m.User)</dt>
                    <dd>@Html.DisplayFor(m => m.User.Username)</dd>

                    <dt class="text-muted fw-semibold">@Html.DisplayNameFor(m => m.Book)</dt>
                    <dd>@Html.DisplayFor(m => m.Book.Title)</dd>

                    <dt class="text-muted fw-semibold">@Html.DisplayNameFor(m => m.Rating)</dt>
                    <dd>@Html.DisplayFor(m => m.Rating)</dd>

                    <dt class="text-muted fw-semibold">@Html.DisplayNameFor(m => m.DateAdded)</dt>
                    <dd>@Html.DisplayFor(m => m.DateAdded)</dd>
                </dl>

                <dl class="col-md-8">
                    <dt class="text-muted fw-semibold">@Html.DisplayNameFor(m => m.Comment)</dt>
                    <dd style="white-space: pre-wrap;">@Html.DisplayFor(m => m.Comment)</dd>
                </dl>
            </div>

            <div class="d-flex gap-2 mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.IdReview" class="btn btn-secondary d-flex align-items-center gap-2 px-3 py-2" style="font-weight: 500;">
                    <ion-icon name="create-outline" style="font-size: 1.4rem;"></ion-icon> Edit
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary d-flex align-items-center gap-2 px-3 py-2" style="font-weight: 500;">
                    <ion-icon name="arrow-back-outline" style="font-size: 1.4rem;"></ion-icon> Back
                </a>
            </div>
        </div>
    </div>
</div>
