@model BookStore.Data.Data.Entities.Review

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7 bg-secondary bg-opacity-10 p-4 rounded">

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="mb-0">Edit review</h1>
            </div>

            <form asp-action="Edit" method="post" id="editForm">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="IdReview" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="IdUser" class="form-label fw-semibold text-muted">User</label>
                            <select asp-for="IdUser" class="form-select" asp-items="ViewBag.IdUser"></select>
                            <span asp-validation-for="IdUser" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IdBook" class="form-label fw-semibold text-muted">Book</label>
                            <select asp-for="IdBook" class="form-select" asp-items="ViewBag.IdBook"></select>
                            <span asp-validation-for="IdBook" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Rating" class="form-label fw-semibold text-muted">Rating</label>
                            <input asp-for="Rating" class="form-control" />
                            <span asp-validation-for="Rating" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DateAdded" class="form-label fw-semibold text-muted">Date added</label>
                            <input asp-for="DateAdded" type="datetime-local" class="form-control" />
                            <span asp-validation-for="DateAdded" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3 h-100 d-flex flex-column">
                            <label asp-for="Comment" class="form-label fw-semibold text-muted">Comment</label>
                            <textarea asp-for="Comment" class="form-control flex-grow-1" rows="8"></textarea>
                            <span asp-validation-for="Comment" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </form>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <ion-icon name="arrow-back-outline" class="me-1"></ion-icon> Back
                </a>
                <button type="submit" class="btn btn-secondary" form="editForm">Save</button>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
