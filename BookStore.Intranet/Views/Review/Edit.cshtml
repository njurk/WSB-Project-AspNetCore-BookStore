@model BookStore.Data.Data.Entities.Review

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center mb-4">Edit Review</h1>

<div class="d-flex justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="border p-4 rounded">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="IdReview" />

                <div class="form-group mb-3">
                    <label asp-for="IdUser" class="control-label">User</label>
                    <select asp-for="IdUser" class="form-control" asp-items="ViewBag.IdUser"></select>
                    <span asp-validation-for="IdUser" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="IdBook" class="control-label">Book</label>
                    <select asp-for="IdBook" class="form-control" asp-items="ViewBag.IdBook"></select>
                    <span asp-validation-for="IdBook" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Rating" class="control-label">Rating</label>
                    <input asp-for="Rating" class="form-control" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Comment" class="control-label">Comment</label>
                    <input asp-for="Comment" class="form-control" />
                    <span asp-validation-for="Comment" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Save" class="btn btn-primary w-100 mb-2" />
                    <a asp-action="Index" class="btn btn-secondary w-100">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
