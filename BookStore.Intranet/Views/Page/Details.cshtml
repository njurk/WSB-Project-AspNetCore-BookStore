@model BookStore.Data.Data.CMS.Page

@{
    ViewData["Title"] = "Page details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 bg-secondary bg-opacity-10 p-4 rounded">
            <h1 class="mb-4">Page details</h1>

            <dl class="row">
                <dt class="col-sm-3 text-muted fw-semibold">@Html.DisplayNameFor(m => m.LinkTitle)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.LinkTitle)</dd>

                <dt class="col-sm-3 text-muted fw-semibold">@Html.DisplayNameFor(m => m.PageTitle)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.PageTitle)</dd>

                <dt class="col-sm-3 text-muted fw-semibold">@Html.DisplayNameFor(m => m.Position)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.Position)</dd>
            </dl>

            <div class="mt-4 d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model?.IdPage" class="btn btn-secondary d-flex align-items-center gap-2 px-3 py-2" style="font-weight: 500;">
                    <ion-icon name="create-outline" style="font-size: 1.4rem;"></ion-icon> Edit
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary d-flex align-items-center gap-2 px-3 py-2" style="font-weight: 500;">
                    <ion-icon name="arrow-back-outline" style="font-size: 1.4rem;"></ion-icon> Back
                </a>
            </div>
        </div>
    </div>
</div>
