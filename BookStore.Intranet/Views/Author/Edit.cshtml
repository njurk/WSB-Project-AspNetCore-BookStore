@model BookStore.Data.Data.Entities.Author

@{
    ViewData["Title"] = "Edit Author";
}

<h1 class="text-center mb-4">Edit Author</h1>

<div class="d-flex justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="border p-4 rounded">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="IdAuthor" />

                <div class="form-group mb-3">
                    <label asp-for="FirstName" class="control-label">First Name</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="LastName" class="control-label">Last Name</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Save" class="btn btn-primary w-100 mb-2" />
                    <a asp-action="Index" class="btn btn-secondary w-100">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
